<Window x:Class="GUI.PipesInWallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Title="PipesInWallWindow" Height="450" Width="580" Background="WhiteSmoke">
    <Grid Margin="5" Background="White">
        <Border CornerRadius="1" BorderThickness="1" BorderBrush="Gray"></Border>
        <ComboBox x:Name="ComboBoxLinks" ItemsSource="{Binding PipesInWallViewModel.Links}" DisplayMemberPath="Name" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="200" SelectionChanged="ComboBoxLinks_SelectionChanged"/>
        <Label Content="Linked ARC Model:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Linked Model Wandfamilien:" HorizontalAlignment="Left" Margin="10,105,0,0" VerticalAlignment="Top"/>
        <Label Content="Kontrollliste:" HorizontalAlignment="Left" Margin="240,105,0,0" VerticalAlignment="Top"/>

        <Button x:Name="BtnArcAnalyze" IsEnabled="False" Content="Architecture Model analysieren" HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top" Width="200" Click="Btn_Click_ArcAnalyze"/>
        <Button x:Name="BtnTgaAnalyze" IsEnabled="False" Content="TGA Model analysieren" HorizontalAlignment="Right" Margin="0,36,10,0" VerticalAlignment="Top" Width="300" Click="BtnTgaAnalyze_Click"/>
        <Button x:Name="BtnApply" IsEnabled="False" Content="Änderungen übernehmen" HorizontalAlignment="Right" Margin="0,63,10,0" VerticalAlignment="Top" Width="300" Click="BtnApply_Click"/>

        <ListBox x:Name="WallFamiliesBox" Background="WhiteSmoke" HorizontalAlignment="Left" Height="255" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="200">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox x:Name="CheckboxTemplate" Content="{Binding FamilyName}" IsChecked="{Binding IsSelected}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <DataGrid x:Name="DataGridControlList" HorizontalAlignment="Right" Height="255" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="300" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn IsReadOnly="True" Header="Rohr ID" Binding="{Binding Path=ElementId}"/>
                <DataGridTextColumn IsReadOnly="True" Header="Ref. Level" Binding="{Binding Path=RefLevel}"/>
                <DataGridTextColumn IsReadOnly="True" Header="System Typ" Binding="{Binding Path=SystemType}"/>
                <DataGridTextColumn IsReadOnly="True" Header="Status" Binding="{Binding Path=Status}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
