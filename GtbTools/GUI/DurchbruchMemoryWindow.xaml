<Window x:Class="GUI.DurchbruchMemoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        
        Title="DurchbruchMemoryWindow" Height="500" Width="750">

    <Grid x:Name="MainGrid">
        <Grid.Background>
            <SolidColorBrush Color="#FFEAEAEA"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="150"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="MyTabs" Background="#FFEAEAEA">
            <TabItem Header="New Durchbruche" TabIndex="0">
                <ScrollViewer x:Name="ScrViewerNew" PreviewMouseWheel="ScrViewerNew_PreviewMouseWheel">
                    <StackPanel Margin="5" Background="White">
                        <DataGrid x:Name="DataGridNew" 
                              ScrollViewer.CanContentScroll="True" 
                              ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                              ScrollViewer.VerticalScrollBarVisibility="Auto" 
                              ItemsSource="{Binding NewDurchbruche}" 
                              AutoGenerateColumns="False" 
                              SelectionChanged="DataGridNew_SelectionChanged" 
                              IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Path=ElementId}"/>
                                <DataGridTextColumn Header="Shape" Binding="{Binding Path=Shape}"/>
                                <DataGridTextColumn Header="Diameter" Binding="{Binding Path=Diameter}"/>
                                <DataGridTextColumn Header="Width" Binding="{Binding Path=Width}"/>
                                <DataGridTextColumn Header="Height" Binding="{Binding Path=Height}"/>
                                <DataGridTextColumn Header="Depth" Binding="{Binding Path=Depth}"/>
                                <DataGridTemplateColumn Header="Views">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Show" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center" Width="75" Click="BtnClick_NewDurchBruchViews"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Mark" Binding="{Binding Path=OpeningMark}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Moved Durchbruche" TabIndex="1">
                <ScrollViewer x:Name="ScrViewerMoved" PreviewMouseWheel="ScrViewerMoved_PreviewMouseWheel">
                    <StackPanel Margin="5" Background="White">
                        <DataGrid x:Name="DataGridMoved"
                              ScrollViewer.CanContentScroll="True" 
                              ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                              ScrollViewer.VerticalScrollBarVisibility="Auto" 
                              ItemsSource="{Binding MovedDurchbruche}" 
                              AutoGenerateColumns="False" 
                              SelectionChanged="DataGridMoved_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Path=ElementId}"/>
                                <DataGridTextColumn Header="Shape" Binding="{Binding Path=Shape}"/>
                                <DataGridTextColumn Header="Diameter" Binding="{Binding Path=Diameter}"/>
                                <DataGridTextColumn Header="Width" Binding="{Binding Path=Width}"/>
                                <DataGridTextColumn Header="Height" Binding="{Binding Path=Height}"/>
                                <DataGridTextColumn Header="Depth" Binding="{Binding Path=Depth}"/>
                                <DataGridTemplateColumn Header="Views">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Edit" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center" Width="75" Click="BtnClick_MovedDurchBruchViews"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Mark" Binding="{Binding Path=OpeningMark}"/>
                                <DataGridTextColumn Header="Date Saved" Binding="{Binding Path=DateSaved}"/>
                                <DataGridCheckBoxColumn Header="Old position marker">
                                    <DataGridCheckBoxColumn.CellStyle>
                                        <Style>
                                            <EventSetter Event="CheckBox.Checked" Handler="OnChecked"/>
                                            <EventSetter Event="CheckBox.Unchecked" Handler="OnUnchecked"/>
                                            <Setter Property="CheckBox.HorizontalAlignment" Value="Center"/>
                                            <Setter Property="CheckBox.VerticalAlignment" Value="Center"/>
                                            <Setter Property= "CheckBox.Background" Value="Transparent"/>
                                        </Style>
                                    </DataGridCheckBoxColumn.CellStyle>
                                </DataGridCheckBoxColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Resized Durchbruche" TabIndex="2">
                <ScrollViewer x:Name="ScrViewerResized" PreviewMouseWheel="ScrViewerResized_PreviewMouseWheel">
                    <StackPanel Margin="5" Background="White">
                        <DataGrid x:Name="DataGridResized"
                              ScrollViewer.CanContentScroll="True" 
                              ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                              ScrollViewer.VerticalScrollBarVisibility="Auto" 
                              ItemsSource="{Binding ResizedDurchbruche}" 
                              AutoGenerateColumns="False" 
                              SelectionChanged="DataGridResized_SelectionChanged" 
                              IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Path=ElementId}"/>
                                <DataGridTextColumn Header="Shape" Binding="{Binding Path=Shape}"/>
                                <DataGridTextColumn Header="Diameter" Binding="{Binding Path=Diameter}"/>
                                <DataGridTextColumn Header="Width" Binding="{Binding Path=Width}"/>
                                <DataGridTextColumn Header="Height" Binding="{Binding Path=Height}"/>
                                <DataGridTextColumn Header="Depth" Binding="{Binding Path=Depth}"/>
                                <DataGridTemplateColumn Header="Views">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Show" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center" Width="75" Click="BtnClick_ResizedDurchBruchViews"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Mark" Binding="{Binding Path=OpeningMark}"/>
                                <DataGridTextColumn Header="OldDiameter" Binding="{Binding Path=OldDiameter}"/>
                                <DataGridTextColumn Header="OldWidth" Binding="{Binding Path=OldWidth}"/>
                                <DataGridTextColumn Header="OldHeight" Binding="{Binding Path=OldHeight}"/>
                                <DataGridTextColumn Header="OldDepth" Binding="{Binding Path=OldDepth}"/>
                                <DataGridTextColumn Header="Date Saved" Binding="{Binding Path=DateSaved}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Moved and Resized" TabIndex="3">
                <ScrollViewer x:Name="ScrViewerMovedAndResized" PreviewMouseWheel="ScrViewerMovedAndResized_PreviewMouseWheel">
                    <StackPanel Margin="5" Background="White">
                        <DataGrid x:Name="DataGridMovedAndResized"
                              ScrollViewer.CanContentScroll="True" 
                              ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                              ScrollViewer.VerticalScrollBarVisibility="Auto" 
                              ItemsSource="{Binding MovedAndResizedDurchbruche}" 
                              AutoGenerateColumns="False" 
                              SelectionChanged="DataGridMovedAndResized_SelectionChanged" 
                              IsReadOnly="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Path=ElementId}"/>
                            <DataGridTextColumn Header="Shape" Binding="{Binding Path=Shape}"/>
                            <DataGridTextColumn Header="Diameter" Binding="{Binding Path=Diameter}"/>
                            <DataGridTextColumn Header="Width" Binding="{Binding Path=Width}"/>
                            <DataGridTextColumn Header="Height" Binding="{Binding Path=Height}"/>
                            <DataGridTextColumn Header="Depth" Binding="{Binding Path=Depth}"/>
                            <DataGridTemplateColumn Header="Views">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Show" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center" Width="75" Click="BtnClick_MovedAndResized"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Mark" Binding="{Binding Path=OpeningMark}"/>
                            <DataGridTextColumn Header="OldDiameter" Binding="{Binding Path=OldDiameter}"/>
                            <DataGridTextColumn Header="OldWidth" Binding="{Binding Path=OldWidth}"/>
                            <DataGridTextColumn Header="OldHeight" Binding="{Binding Path=OldHeight}"/>
                            <DataGridTextColumn Header="OldDepth" Binding="{Binding Path=OldDepth}"/>
                            <DataGridTextColumn Header="Date Saved" Binding="{Binding Path=DateSaved}"/>
                            <DataGridCheckBoxColumn Header="Old position marker">
                            <DataGridCheckBoxColumn.CellStyle>
                                <Style>
                                    <EventSetter Event="CheckBox.Checked" Handler="OnChecked"/>
                                    <EventSetter Event="CheckBox.Unchecked" Handler="OnUnchecked"/>
                                    <Setter Property="CheckBox.HorizontalAlignment" Value="Center"/>
                                    <Setter Property="CheckBox.VerticalAlignment" Value="Center"/>
                                    <Setter Property= "CheckBox.Background" Value="Transparent"/>
                                </Style>
                            </DataGridCheckBoxColumn.CellStyle>
                            </DataGridCheckBoxColumn>
                            </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
        </TabControl>
        <StackPanel x:Name="RightStackPanel" Margin="5,22,5,0" Grid.Column="1" Focusable="True" Height="542" VerticalAlignment="Top">
            <Button Content="Clear Selection" Grid.Column="1" HorizontalAlignment="Center" Margin="0,10,0,5" VerticalAlignment="Top" Width="100" Click="Btn_Click_ClearAll" Visibility="Visible"/>
            <Button Content="Save New" Grid.Column="1" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Top" Width="100" Click="Btn_Click_SaveNew" Visibility="Visible"/>
            <Button Content="Save All" Grid.Column="1" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Top" Width="100" Click="Btn_Click_SaveAll" Visibility="Visible"/>
        </StackPanel>
    </Grid>
</Window>
